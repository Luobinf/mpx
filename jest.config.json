{
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|styl)$": "identity-obj-proxy"
  },
  "testEnvironment": "jsdom",
  "testMatch": ["**/packages/**/?(*.)+(spec|test).[jt]s?(x)"],
  "testPathIgnorePatterns": ["dist", "node_modules"],
  "transformIgnorePatterns": ["node_modules/(?!(@mpxjs/*)/)"],
  "globals": {
    "__mpx_mode__": "wx",
    "wx": {
    },
    "__DEV__": true
  },
  "setupFiles": ["./scripts/setupFile.js"],
  "setupFilesAfterEnv": ["./scripts/setupAfterEnv.js"]
}